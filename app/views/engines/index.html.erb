	<th>Name</th>
	<th>Hostname</th>
	<th>Set As</th>
	<th>Status</th>
	<th>View</th>
	<th>Actions</th>
<%@engines.each do |engine| 
 state = engine.read_state # faster than querying the docker api 5 times
%>
<tr>	
	<td><%=engine.containerName %></td> 
	<td><%=engine.fqdn %></td>
	<td><%=engine.setState %></td>
	<td><%=state %></td>
	<td>Details</td>
	<% 
		if state == "running"
			%> <td>Stop Pause </td> <%
		elseif state == "paused"
			%> <td>Unpause</td> <%
		elseif start == "stopped" 
			%> <td>Start / Destroy
			</td> <%
		elseif start == "nocontainer" 
			%> <td>Create / Delete </td> 
	<%  end %>
	
</tr>
<% end %>
</table>
