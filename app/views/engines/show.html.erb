<table>
<tr>	<% state= @engine.read_state %>
	<td><%=@engine.containerName %></td> 
	<td><%=@engine.fqdn %></td>
	<td><%=@engine.setState %></td>
	<td><%= state %></td>
	
	<% 
		if state == "running"
			%> <td>Stop Pause </td> <%
		elsif state == "paused"
			%> <td>Unpause</td> <%
		elsif start == "stopped" 
			%> <td>Start / Destroy
			</td> <%
		elsif start == "nocontainer" 
			%> <td>Create / Delete </td> 
	<%  end %>
	</tr></table>
	
<% 
	if state != "nocontainer" 
		stats = @engine.stats	%>			
				 	State: <%= @engine.state  %><br>
                  	Processes: <%=@engine.proc_cnt %>
                  	<% if state == "stopped" %>
                  		Stopped: <%=@engine.stopped_ts %> <br>
                  	 <% else %> 
                  	 	Started: <%=@engine.started_ts %> <br>
                  	 <%end%>
                  	Memory Used: <%=@engine.RSSMemory.to_s  %> 
                  	CPU Time: <%=@engine.cpuTime.to_s %> *Since Engine start
	
 <% end %>

