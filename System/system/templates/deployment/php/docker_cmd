#/!bin/bash

. /opt/mpas/etc/scripts.env 



VOL=""

if test -f home/fs.env
	 then
		. home/fs.env
		if test ! -f  $FSVolHome/$VOLDIR
			then
				mkdir -p  $FSVolHome/$VOLDIR
			echo creating $VOLDIR
			else
				using $VOLDIR
			fi

		VOL=" -v $FSVolHome/$VOLDIR:$FSVolHome/$STACKATO_FILESYSTEM"
	fi

docker_cmd="docker run  -h NAME --name NAME --cidfile /opt/mpas/run/NAME.cid $VOL -d -e PORT=$PORT -t NAME/deploy "
echo running $docker_cmd
$docker_cmd



ssh_cmd="ssh -i  $NgnixID  rma@nginx.docker sudo sh /home/addsite.sh NAME test $PORT"
echo running $ssh_cmd

$ssh_cmd
