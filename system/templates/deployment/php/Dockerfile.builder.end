

USER 0
#protect source
RUN groupadd -g $data_gid writegrp
RUN usermod -G $data_gid www-data
RUN chown -R  $data_uid.$data_gid  /home/app/

RUN mkdir  -p /var/log/apache2/ ; chown www-data /var/log/apache2/ 
RUN mkdir  -p /run/apache2/ ; chown www-data /run/apache2/
 
ADD home/startwebapp.sh /home/app/
ENV RAILS_ENV production
USER www-data

WORKDIR /home/app



